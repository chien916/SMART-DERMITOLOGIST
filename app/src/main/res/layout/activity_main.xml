<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity_main">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_rcp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_rcp_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_rcp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_rcp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_rcp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageButton
        android:id="@+id/butt_main_startnewsession"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/butt_main_userpreference"
        app:layout_constraintEnd_toStartOf="@+id/guid_rcp_90"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guid_rcp_10"
        app:layout_constraintStart_toStartOf="@+id/guid_rcp_10"
        app:layout_constraintTop_toBottomOf="@+id/guid_rcp_30"
        app:srcCompat="@drawable/btn_startnewsession"
        tools:ignore="UsingOnClickInXml" />

    <ImageButton
        android:id="@+id/butt_main_userpreference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/butt_main_aboutsoftware"
        app:layout_constraintEnd_toStartOf="@+id/guid_rcp_90"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guid_rcp_10"
        app:layout_constraintStart_toStartOf="@+id/guid_rcp_10"
        app:layout_constraintTop_toBottomOf="@+id/butt_main_startnewsession"
        app:srcCompat="@drawable/btn_userpreferences" />

    <ImageButton
        android:id="@+id/butt_main_aboutsoftware"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:alpha="0"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guid_rcp_40"
        app:layout_constraintEnd_toStartOf="@+id/guid_rcp_90"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guid_rcp_10"
        app:layout_constraintStart_toStartOf="@+id/guid_rcp_10"
        app:layout_constraintTop_toBottomOf="@+id/butt_main_userpreference"
        app:srcCompat="@drawable/btn_aboutsoftware" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/guid_rcp_30"
        app:layout_constraintEnd_toStartOf="@+id/guid_rcp_90"
        app:layout_constraintStart_toStartOf="@+id/guid_rcp_10"
        app:layout_constraintTop_toTopOf="@+id/guid_rcp_5"
        app:srcCompat="@drawable/other_line" />

</androidx.constraintlayout.widget.ConstraintLayout>